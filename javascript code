<body>
    <header>
        <h1>My Portfolio</h1>
        <div class="hamburger-menu" onclick="toggleMenu()">â˜°</div>
        <nav class="nav-links">
            <a href="#about">About</a>
            <a href="#projects">Projects</a>
            <a href="#contact">Contact</a>
        </nav>
    </header>

    <section id="about">
        <h2>About Me</h2>
        <p>This is my personal portfolio showcasing my work and skills.</p>
        <p>Today's Date: <span id="date"></span></p>
    </section>

    <section id="projects">
        <h2>Projects</h2>
        <div class="gallery">
            <img src="thumb1.jpg" alt="Thumbnail 1" onclick="showModal('img1.jpg')">
            <img src="thumb2.jpg" alt="Thumbnail 2" onclick="showModal('img2.jpg')">
        </div>
        <div class="modal" id="imageModal" onclick="hideModal()">
            <img id="modalImage" src="" alt="">
        </div>
    </section>

    <section id="contact">
        <h2>Contact</h2>
        <form>
            <p><input type="button" name="random" value="Random Link" onclick="randomLink()"></p>
        </form>
    </section>

    <script>
        // Display current date
        document.getElementById('date').textContent = new Date().toDateString();

        // Hamburger menu toggle
        function toggleMenu() {
            const nav = document.querySelector('.nav-links');
            if (nav.style.display === 'flex') {
                nav.style.display = 'none';
            } else {
                nav.style.display = 'flex';
                nav.style.flexDirection = 'column';
            }
        }

        // Modal functionality
        function showModal(imageSrc) {
            const modal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            modal.style.display = 'flex';
            modalImage.src = imageSrc;
        }

        function hideModal() {
            const modal = document.getElementById('imageModal');
            modal.style.display = 'none';
        }

        // Random link opener
        const randomLinks = [
            'https://example.com/1',
            'https://example.com/2',
            'https://example.com/3'
        ];

        function randomLink() {
            const randomIndex = Math.floor(Math.random() * randomLinks.length);
            window.open(randomLinks[randomIndex], '_blank');
        }
    </script>
</body>
